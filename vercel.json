{
    "version": 2,
    "name": "Blog-App",
    "builds": [
        { "src": "/index.js", "use": "@vercel/node" }
    ],
    "routes": [
        { 
            "src": "/(.*)",
            "dest": "/index.js",
            "methods" : ["GET", "POST", "PUT", "PUT", "DELETE", "PATCH", "OPTIONS"],
            "headers" : {
                "Access-Control-Allow-Origin" : "*"
            }
        }
    ],
    "installCommand": "npm install --legacy-peer-deps"
}